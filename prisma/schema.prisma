generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}

model Profile {
  id        Int     @id @default(autoincrement())
  name      String
  title     String
  bio       String
  avatar    String?
  github    String?
  linkedin  String?
  email     String?
  phone     String?
  resumeUrl String?
}

model Experience {
  id          Int      @id @default(autoincrement())
  company     String
  position    String
  startDate   String
  endDate     String?
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String?
  techStack   String
  liveUrl     String?
  githubUrl   String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Skill {
  id          Int            @id @default(autoincrement())
  name        String
  category    String?        // Keeping temporarily for migration, made optional
  level       Int            @default(80)
  icon        String?
  order       Int            @default(0)
  categoryId  Int?
  categoryRel SkillCategory? @relation(fields: [categoryId], references: [id])
}

model SkillCategory {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  icon     String?
  gradient String?
  order    Int     @default(0)
  skills   Skill[]
}

model Certification {
  id          Int      @id @default(autoincrement())
  title       String
  issuer      String
  date        String
  description String?
  image       String?
  url         String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}
